<%require 'pry'%>
<% if logged_in?%>

<h1><%=@topic.text%></h1>
<h4>Posts:</h4>
<ul>
  <%@topic.posts.each do |the_post|%>
  <li><%=the_post.text%></li>
  <%end%>
</ul>
 <br>
 

<form action="/posts" method="POST">

  <br>
   
  
  <label>Add post to </label>
   <input type="hidden" name="post[topic_id]" value="<%=@topic.id%>" id="<%=@topic.id%>"><%=@topic.text%></input>
  
  <br>
  <input type="text" name="topic[text]" id="topic_text">
  <br>
  <input type="submit" value="Create Post">
</form>
<p><a href="/topics">go back</a></p>
<p><a href="/">return to home page</a></p>
<% else %>
<% redirect to "/failure" %>
<% end %>