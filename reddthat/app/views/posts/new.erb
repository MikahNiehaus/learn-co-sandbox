<% if logged_in?%>

<h1>Create a new Post</h1>

<form action="/posts" method="post">
  <label>Text:</label>
  <br>
  <input type="text" name="post[text]" id="post_text">
  <br>
  <label>Choose an existing topic:</label>
  <br>
  <% @topics.each do |topic| %>
    <input type="radio" name="post[topic_id]" value="<%=topic.id%>" id="<%=topic.id%>"><%= topic.text %></input>
  <% end %>
  <br>
  <label>and/or create an topic:</label>
  <br>
  <label>Text:</label>
  <br>
  <input type="text" name="topic[text]" id="topic_text">
  <br>
  <input type="submit" value="Create Post">
</form>
<% else %>
<% redirect to "/failure" %>
<% end %>